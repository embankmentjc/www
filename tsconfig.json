{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom",
      "es2015"
    ],
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
